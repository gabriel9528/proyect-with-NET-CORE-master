@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Editar slider";
}

<br />
<br />
<h3 class="text-center">Editar slider</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="row px-1 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-6">
                    <label class="col-12">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Estado"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Estado"/>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="UrlImagen"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input type="file" name="archivos" id="subidaArchivos" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <div class="col">
                   <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                </div>
                <div class=col>
                    <a asp-action="Index" class="btn btn-success form-control">Volver a la lista</a>
                </div>
            </div>
        </div>
        <div class="col-4 pt-3">
            <img src="@Model.UrlImagen" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9 " />
        </div>
    </div>

</form>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.tiny.cloud/1/4fs00frrs08c8n843jh51in5uv5vs3pl0q4nsp7077i6yeau/tinymce/6/tinymce.min.js"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}