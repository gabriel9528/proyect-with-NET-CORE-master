@model BlogCore.Models.ViewModels.ArticuloVM

@{
    ViewData["Title"] = "Crear Articulo";
}

<br />
<br />
<h3 class="text-center">Crear una nuevo articulo</h3>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-1 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-6">
                    <label class="col-12">
                        <label asp-for="Articulo.Nombre"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Articulo.Nombre" class="form-control" placeholder="Ingrese el nombre del articulo"/>
                    <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Articulo.Descripcion"></label>
                    </label>
                </div>
                <div class="col-6">
                    <textarea asp-for="Articulo.Descripcion" class="form-control" style="height:300px" ></textarea>
                    <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mt-2">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Articulo.CategoriaId">Categoria</label>
                    </label>
                </div>
                <div class="col-6 mt-2">
                    @Html.DropDownListFor(m => m.Articulo.CategoriaId, Model.ListaCategorias, "Por favor seleccione una categoria", 
                    new{@classs="form-control"})
                </div>
            </div>


            <div class="form-group row">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Articulo.UrlImagen"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input type="file" name="archivos" id="subidaArchivos" class="form-control" />
                </div>
            </div>


            <br />
            <div class="form-group row">
                <div class="col-8">
                   <partial name="_VistaCrearVolver" />
                </div>
            </div>

        </div>
    </div>

</form>

@section Scripts {

    <script src="https://cdn.tiny.cloud/1/4fs00frrs08c8n843jh51in5uv5vs3pl0q4nsp7077i6yeau/tinymce/6/tinymce.min.js"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}