@model BlogCore.Models.ViewModels.HomeVM


<div class="row fondoTitulo mt-1">
    <div class="col-sm-12">
        <h1 class="text-center text-white bg-secondary py-1">Cursos y tutoriales de programacion</h1>
    </div>
</div>

@if(Model.ListaArticulos.Count()>0) {
    <hr />
    <div class="row">
        @foreach(var item in Model.ListaArticulos.OrderBy(i => i.Id))
        {
            <div class="col-4">
                <div class="card">
                    <img src="@item.UrlImagen" class="img-thumbnail" width="100%">
                    <div class="card-body">
                        <h5 class="text-center">@item.Nombre</h5>
                        <a asp-action="Details" class="btn btn-success" style="border-radius:2px" asp-route-id="@item.Id">
                            More Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else {
    <p>No hay articulos</p>
}